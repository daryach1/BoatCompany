<Page x:Class="BoatCompanyCherc.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoatCompanyCherc.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="White">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="orderButton"
                Height="80"
                Width="300"
                Background="{StaticResource firstMain}"
                Foreground="White"
                Content="Заказы"
                FontSize="21"
                Click="orderButton_Click"
                    Margin="50"/>
            <Button x:Name="boatButton"
                Height="80"
                Width="300"
                Background="{StaticResource firstMain}"
                Foreground="White"
                Content="Каталог товаров"
                FontSize="21"
                Click="boatButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
